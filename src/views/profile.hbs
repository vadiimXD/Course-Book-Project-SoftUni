<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Page</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>

    <!-- In case of error, you should display div with class "errorContainer" -->
    <!-- You can choose to display the first error or all of them (error message/s in your opinion) -->

    <!-- <div>
            <div class="errorContainer">
                <p>Error</p>
            </div>
        </div> -->

    <div class="navigation">
        <nav>
            <img src="/images/logo.png">
            <ul>
                <!-- Guest users and Logged users -->
                <li><a href="/">Home</a></li>
                <li><a href="/courses">All Courses</a></li>
                {{#if isAuthenticated}}
                <li><a href="/profile">Profile</a></li>
                <li><a href="/create">Create Course Offers</a></li>
                <li><a href="/logout">Logout</a></li>
                {{else}}
                <li><a href="/login">Login</a></li>
                <li><a href="/register">Register</a></li>
                {{/if}}

            </ul>
        </nav>
    </div>


    <main>
        <section id="user">
            <div class="user-info">
                <div class="user-logo">
                    <img src="https://ps.w.org/user-avatar-reloaded/assets/icon-256x256.png?rev=2540745">
                </div>
                <h1 class="user-email">{{userInformation.email}}</h1>
                {{#if createdCourses.length}}
                <h2 class="created-course-count">Total Created Course: {{createdCourses.length}}</h2>
                {{else}}
                <h2 class="created-course-count">Total Created Course: 0</h2>
                {{/if}}
                {{#if signedCourses.length}}
                <h2 class="sign-course-count">Total Sign up Course: {{signedCourses.length}}</h2>
                {{else}}
                <h2 class="sign-course-count">Total Sign up Course: 0</h2>
                {{/if}}
            </div>
        </section>
        <section class="profile-course">
            <div class="created-course">
                <h2 class="section-title">Created Course</h2>
                {{#each createdCourses}}
                <div class="info">
                    <h2 class="title">{{title}}</h2>
                    <h4 class="genre">Type: {{type}}</h4>
                    <div class="learn-more">
                        <a href="/details/{{_id}}">Learn More...</a>
                    </div>
                </div>
                {{else}}
                <h2 class="no-course-in-profile">You haven't created a course yet...</h2>
                {{/each}}
            </div>
            <div class="sign-course">
                <h2 class="section-title">Sign Up Course</h2>
                {{#each signedCourses}}
                <div class="info">
                    <h2 class="title">{{title}}</h2>
                    <h4 class="genre">Type: {{type}}</h4>
                    <h4 class="certificate">Certificate: {{certificate}}</h4>
                    <div class="learn-more">
                        <a href="/details/{{_id}}">Learn More...</a>
                    </div>
                </div>
                {{else}}
                <h2 class="no-course-in-profile">You haven't signed up for any course yet...</h2>
                {{/each}}
            </div>

        </section>
    </main>

    <footer>Back-End 2023</footer>

</body>

</html>